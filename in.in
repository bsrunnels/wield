$DISTRIBUTION cauchy

#IO SETTINGS

$outfile out.dat

#CRYSTAL PARAMETERS

#$C_1 tests/FCC_FCC_Tilt/fcc.in
#$C_2 tests/FCC_FCC_Tilt/fcc.in
$C_1 fcc.in
$C_2 fcc.in
$A 0
$B 8
$stdev 10.

#CONFIGURATION PARAMETERS

$X1 1 1 0
$Z1 0 0 1
$X2 1 1 0
$Z2 0 0 1
$ThetaRotY1 0.5
$ThetaRotY2 0.5
$theta_min 0
$theta_max 180
$dtheta 5

#NUMERICAL PARAMETERS

$tolerance 1E-6
$distribution DISTRIBUTION

$test sin(3.1415926535)

$vtk
$vtk_rot_x1 90
$vtk_rot_x2 -90
$resolution 15
