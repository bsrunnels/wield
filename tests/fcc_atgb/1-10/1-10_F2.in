$Crystal1 {
    include ../fcc.in
}

$Crystal2 {
    include ../fcc.in
}

$EnergySurfaceSphere {
    # All modes
    include ../constants.in
    $StdDev 0.7
    $Tolerance 1E-2
    $X1 1 -1 0
    $X2 1 -1 0
    $Z1 1 1 -1
    $Z2 1 1 1

    #EnergySurfaceSphere only
    $RResolution 100
    $AzimuthMin 0
    $AzimuthMax 360
    $AzimuthResolution 360
}
