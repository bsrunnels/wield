$Crystal1 {
    include fcc.in
}

$Crystal2 {
    include fcc.in
}

#$VisualizeOR
#$GammaInterface1D {
$GammaSurfaceSphere {
    # All modes
    $A 3.4234   * 0.9
    $B 64.2913  * 0.9
    $StdDev 0.7
    $Tolerance 1E-2
    $Distribution cauchy
    $Z1 1 1 -1
    $Z2 -1 -1 1 
    $X1 1 1 2
    $X2 1 1 2
    $OutFile test_test_test.dat

    #GammaSurfaceSphere only
    $PrePhiRotX 10
    $PolarMin 0
    $PolarMax 90
    $PolarResolution 10
    $RResolution 10
    $AzimuthMin 0
    $AzimuthMax 360
    $AzimuthResolution 40

    #VisualizeOR only
    $Resolution 10
    
    #GammaInterface1D only
    $DPhi 0.25
    $PhiRotX 1.
    $FullConvexify
}



