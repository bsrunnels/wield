$DynamicPlotting
$DISTRIBUTION cauchy


#CRYSTAL PARAMETERS

$C_1 fcc.in
$C_2 fcc.in
$A 0
$B 1
$stdev 0.05

#IO SETTINGS

$outfile 100_$stdev.dat

#CONFIGURATION PARAMETERS

$X1 0 0 1
$Z1 1 0 0
$X2 0 0 1
$Z2 1 0 0

$ThetaRotX1 0.5
$ThetaRotX2 -0.5
$theta_min 0
$theta_max 10
$dtheta .1

#NUMERICAL PARAMETERS

$tolerance 1E-2
#$tolerance 1E-6 # uncommenting this reveals another peak
$distribution DISTRIBUTION

$test sin(3.1415926535)

#$vtk
$vtk_rot_x1 55
$vtk_rot_x2 -55
$resolution 50
